<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.text.Text?>
<?import java.net.URL?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.layout.VBox?>

<StackPane styleClass="background" xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.warringnationsbutgood.Controller">
    <stylesheets><URL value="@styles.css"/></stylesheets>

        <ImageView>
            <image>
                <Image url="@./assets/background/background.png" />
            </image>
        </ImageView>

        <VBox translateY="-270" styleClass="titleContainer">
            <Text styleClass="title" text="Warring Nations"/>
        </VBox>
        <Button translateY="100" styleClass="menuButtons" text="Host Game" onAction="#hostButtonClick"/>
        <Button translateY="240" styleClass="menuButtons" text="How to Play" onAction="#rules"/>
</StackPane>

