<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import java.net.URL?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.text.Text?>
<?import javafx.collections.FXCollections?>
<?import java.lang.String?>

<StackPane styleClass="background" xmlns="http://javafx.com/javafx"
           xmlns:fx="http://javafx.com/fxml"
           fx:controller="com.example.warringnationsbutgood.Controller">

    <stylesheets><URL value="@styles.css"/></stylesheets>
    <ImageView>
        <image>
            <Image url="@./assets/background/background1.jpg" />
        </image>
    </ImageView>

    <VBox id="settings">
        <Text styleClass="title" text="Game Settings"/>
    </VBox>

    <ComboBox fx:id="dropdown" layoutX="100" layoutY="100">
        <items>
            <FXCollections fx:factory="observableArrayList">
                <String fx:value="2"/>
                <String fx:value="3"/>
                <String fx:value="4"/>
                <String fx:value="5"/>
                <String fx:value="6"/>
                <String fx:value="7"/>
                <String fx:value="8"/>
                <String fx:value="9"/>
                <String fx:value="10"/>
            </FXCollections>
        </items>
    </ComboBox>

    <Button translateY="140" styleClass="menu_buttons" text="Start Game" onAction="#start"/>
    <Button translateY="250" styleClass="menu_buttons" text="Back to lobby" onAction="#lobbyClick"/>
</StackPane>
